# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=4000
SERVER_ENV=development

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/mwork?sslmode=disable

# Email Configuration (SMTP)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_FROM_EMAIL=noreply@mwork.com
EMAIL_FROM_NAME=MWork
EMAIL_USE_TLS=true
EMAIL_TEMPLATES_DIR=templates

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production-min-32-chars
JWT_TTL=1440

# Storage Configuration
STORAGE_TYPE=local
STORAGE_BASE_PATH=./uploads
STORAGE_BASE_URL=/api/v1/files
STORAGE_BUCKET=
STORAGE_REGION=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_ENDPOINT=
STORAGE_USE_SSL=false
STORAGE_PUBLIC_READ=true

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_MAX_USER_STORAGE=104857600
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/quicktime
UPLOAD_IMAGE_QUALITY=85
